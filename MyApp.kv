WindowManager:
    MainMenu:
    ReceiveMenu:
    ExpendMenu:

<MainMenu>:
    name: "MainMenu"

    # add the rest of the widgets for this screen
    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height

        Label:
            text: "S.E.R.B."
            color: "#000000"


        Button:
            text: "Bevételezés"
            on_release:
                app.root.current = "ReceiveMenu"
                root.manager.transition.direction = "down"

        Button:
            text: "Kiadás"
            on_release:
                app.root.current = "ExpendMenu"
                root.manager.transition.direction = "up"


<ReceiveMenu>:
    name:  "ReceiveMenu"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height


        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None


            Spinner:
                id: category_spinner
                text: "Kategória"
                values: ["Általános", "Termelés", "Donorterem", "Recepció"]
                on_text: root.spinner_clicked(category_spinner.text)        # With this the categories are getting updated the ID is important!

            Spinner:
                id: item_spinner
                text: "Válassz kategóriát"
                values: []
                on_text: root.on_spinner_select(item_spinner.text)

        Button:
            text: "Bevételezési dátum"
            on_release: root.show_date_picker(title = "Bevételezési dátum", button_id = "date_receive")


        Button:
            text: "Gyártási idő"
            on_release: root.show_date_picker(title = "Gyártási dátum", button_id = "date_production")


        Button:
            text: "Lejárat"
            on_release: root.show_date_picker(title = "Lejárati dátum", button_id = "date_expiry")  #Nézd majd végén nemisfog kelleni


        TextInput:
            id: product_number
            text: "Gyártási szám"
            multiline: False
            halign: "center"
            valign: "middle"


        TextInput:
            id: quantity
            text: "Mennyiség"
            multiline: False
            input_filter: "int"
            halign: "center"
            valign: "middle"

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None

            Button:
                text: "Helyileg bevételez"
                on_release: root.local_update()

            Button:
                text: "Feltöltés"
                on_release: root.sync_data()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None

            Button:
                text: "Helyi lista"
                on_release: root.show_popup_local(self)

            Button:
                text: "Sync"
                on_release: root.show_popup_sync(self)

        Button:
            text: "Vissza"
            on_release:
                app.root.current = "MainMenu"
                root.manager.transition.direction = "up"




<ExpendMenu>:
    name: "ExpendMenu"

    BoxLayout:
        orientation: "vertical"

        TextInput:
            id: expend_id
            text: "Anyag kód"
            multiline: False
            halign: "center"
            valign: "middle"

        TextInput:
            id: expend_quantity
            text: "Mennyiség"
            multiline: False
            input_filter: "int"
            halign: "center"
            valign: "middle"

        Button:
            text: "Helyileg kiad"
            on_release: root.materialExpend()

        Button:
            text: "Feltöltés"
            on_release: root.eSychronizeData()

        Button:
            text: "Vissza"
            on_release:
                app.root.current = "MainMenu"
                root.manager.transition.direction = "down"
